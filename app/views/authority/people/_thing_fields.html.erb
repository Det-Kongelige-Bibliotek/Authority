<h3>General</h3>
<table class="table table-striped">
  <tbody>
  <tr>
    <td>
      <strong><%= label thing, :_name, 'Name:' %></strong>
    </td>
    <td>
      <%= text_field thing, :_name %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label thing, :alternate_names, 'Alternate Names:' %></strong>
    </td>
    <td>
      <% if !@organization.alternate_names.empty? %>
          <% @organization.alternate_names.each do |alternateN| %>
              <%= text_field organization, :alternate_names, :multiple => true, :value => alternateN %>
          <% end %>
      <% else %>
          <%= text_field thing, :alternate_names, :multiple => true %>
      <% end %>
      <%= button_tag "Add more", type: 'button', data: {function: 'clone-input'} %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label thing, :description, 'Description:' %></strong>
    </td>
    <td>
      <%= text_field thing, :description %>
    </td>
  </tr>
  </tbody>
</table>