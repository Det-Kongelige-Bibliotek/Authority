<h1><%= t('.list', var: @klazz.to_s) %></h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.display_value, person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Delete', person_path(person), method: :delete, data: { confirm: 'Confirm'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>