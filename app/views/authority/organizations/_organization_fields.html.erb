<h3>Organization details</h3>

<table class="table table-striped">
  <tbody>
  <tr>
    <td>
      <strong><%= label organization, :address, 'Address:' %></strong>
    </td>
    <td>
      <%= text_field organization, :address %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label organization, :contact_point, 'Contact Point:' %></strong>
    </td>
    <td>
      <% if !@organization.contact_point.empty? %>
          <% @organization.contact_point.each do |contact_p| %>
              <%= text_field organization, :contact_point, :multiple => true, :value => contact_p %>
          <% end %>
      <% else %>
          <%= text_field organization, :contact_point, :multiple => true %>
      <% end %>
      <%= button_tag "Add more", type: 'button', data: {function: 'clone-input'} %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label organization, :department, 'Department:' %></strong>
    </td>
    <td>
      <%= text_field organization, :department %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label organization, :email, 'Email:' %></strong>
    </td>
    <td>
      <% if !@organization.email.empty? %>
          <% @organization.email.each do |email| %>
              <%= text_field organization, :email, :multiple => true, :value => email %>
          <% end %>
      <% else %>
          <%= text_field organization, :email, :multiple => true %>
      <% end %>
      <%= button_tag "Add more", type: 'button', data: {function: 'clone-input'} %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label organization, :globbal_location_number, 'GLN:' %></strong>
    </td>
    <td>
      <%= text_field organization, :globbal_location_number %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= label organization, :telephone, 'Telephone:' %></strong>
    </td>
    <td>
      <% if !@organization.telephone.empty? %>
          <% @organization.telephone.each do |tele| %>
              <%= text_field organization, :telephone, :multiple => true, :value => tele %>
          <% end %>
      <% else %>
          <%= text_field organization, :telephone, :multiple => true %>
      <% end %>
      <%= button_tag "Add more", type: 'button', data: {function: 'clone-input'} %>
    </td>
  </tr>
  </tbody>
</table>
